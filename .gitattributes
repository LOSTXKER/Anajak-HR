# Auto detect text files and perform LF normalization
* text=auto

# JavaScript/TypeScript
*.js text eol=lf
*.jsx text eol=lf
*.ts text eol=lf
*.tsx text eol=lf
*.mjs text eol=lf

# CSS/Styles
*.css text eol=lf
*.scss text eol=lf

# JSON/Config
*.json text eol=lf
*.yaml text eol=lf
*.yml text eol=lf

# Markdown
*.md text eol=lf

# SQL
*.sql text eol=lf

# Shell scripts
*.sh text eol=lf

# Ignore files for export
.git export-ignore
.gitattributes export-ignore
.gitignore export-ignore
node_modules export-ignore

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.svg binary
*.woff binary
*.woff2 binary
*.ttf binary
*.eot binary

